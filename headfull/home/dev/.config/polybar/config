[colors]
fg = #ffffff
bgcontent = #000000

fgicon = #ffffff

fgcontent = #aaaaaa

bgdate = #99aaee
bgtime = #99aaee
bgcpu = #cccc88
bgmemory = #bbccaa

fgxwindow = #00ddff

bgi3 = #aa8877
bgi3f = #ccaa99
bgtray = #bbcc99
alert = #009900

tp = #aa000000

[settings]
format-padding = 0
format-margin = 0

[bar/top]
monitor = ${env:MONITOR}
width = 100%
height = 16
underline-size = 1

background = ${colors.tp}
foreground = ${colors.fg}

bottom = false

border-color = ${colors.tp}
border-size = 0
border-left-size = 10
border-right-size = 10

module-margin-left = 0
module-margin-right = 0
padding-left = 0
padding-right = 0
border-bottom-size = 2

font-0 = JetBrains Mono:size=8;1
font-1 = Source Code Pro:pixelsize=15;1
font-2 = DejaVu Sans:pixelsize=15;1
font-3 = DejaVu Sans:pixelsize=9;0
font-4 = Font Awesome 5 Pro Solid:pixelsize=11;2
font-5 = Font Awesome 5 Pro Regular:pixelsize=11;2

modules-left = ewmh spacer app-terminal app-firefox spacer help
modules-center = xwindow
modules-right = memory cpu date exit
fixed-center = true

tray-position = right
tray-background = ${colors.bgtray}

[module/spacer]
type = custom/text
content = "  "

[module/app-terminal]
type = custom/text
content-margin = 1 
content-foreground = #ccc
content = %{T5}%{T-}
click-left = lxterminal &

[module/app-firefox]
type = custom/text
content-margin = 1
content-foreground = #ccc
content = %{T5}%{T-}
click-left = firefox &

[module/help]
type = custom/text
content-margin = 1 
content-foreground = #7f7
content = %{T6}%{T-}
click-left = firefox http://github.com/linkuistics/devanyware &

[module/exit]
type = custom/text
content-margin = 1 
content = %{T5}%{T-}
content-foreground = #f55
click-left = openbox --exit

[module/date]
type = internal/date
interval = 60
date = %a %d %b
time = %H:%M
format-foreground = ${colors.fgcontent}
label = %date% %time%
format-margin = 2

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "CPU: " 
format-foreground = ${colors.fgcontent}
format = <ramp-coreload>
ramp-coreload-spacing = 1
ramp-coreload-0 = %{T4}▁
ramp-coreload-1 = %{T4}▂
ramp-coreload-2 = %{T4}▃
ramp-coreload-3 = %{T4}▄
ramp-coreload-4 = %{T4}▅
ramp-coreload-5 = %{T4}▆
ramp-coreload-6 = %{T4}▇
ramp-coreload-7 = %{T4}█
format-margin = 2

[module/memory]
type = internal/memory
interval = 10
format-foreground = ${colors.fgcontent}
label = %mb_used% used of %gb_total%
format-margin = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:160:...%
format-foreground = ${colors.fgxwindow}

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-click = false
enable-scroll = false

label-active = " %name% "
label-active-underline = #fba922

label-occupied = " %name% "
label-occupied-foreground = #ffaa00

label-urgent = " %name% "
label-urgent-underline = #9b0a20

label-empty = " %name% "
label-empty-foreground = #555555
